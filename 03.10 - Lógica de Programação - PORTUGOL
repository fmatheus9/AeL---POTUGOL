programa
{
	
	funcao inicio()
	{
		real a, b, c, d, x
		escreva("Digite a quantidade de Hambúrguer (R$3.00): ")
		leia(a)
		escreva("Digite a quantidade de Cheeseburguer (R$2,50): ")
		leia(b)
		escreva("Digite a quantidade de Fritas (R$2,50): ")
		leia(c)
		escreva("Digite a quantidade de Refrigerante (R$1,00): ")
		leia(d)
		escreva("Digite a quantidade de Milkshake (R$3,00): ")
		leia(x)
		escreva("O valor final foi: R$", a*3+b*2.50+c*2.50+d*1+x*3," reais")

		escreva("\n----------------------------------------------\n")

		real n1,n2,n3
		cadeia n4
		escreva("\nDigite seu nome: ")
		leia(n4)
		escreva("Número de carros vendidos: ")
		leia(n1)
		escreva("Valor total das vendas: ")
		leia(n2)
		n3 = (n2*(5/100))
		escreva("Funcionári, ", n4 , "seu salário final foi de: R$", 500+50*n1+(n3+n2))

		escreva("\n----------------------------------------------\n")
		
		real x1, x2, y1, y2, auxiliar, distancia
		escreva("Cordenada do primeiro X ponto x1: ")
		leia(x1)
		escreva("Cordenada do primeiro Y ponto y1: ")
		leia(y1)
		escreva("Cordenada do segundo X ponto x2: ")
		leia(x2)
		escreva("Cordenada do segundo Y ponto y2: ")
		leia(y2)

		auxiliar = (mat.potencia(x2-x1,2) + mat.potencia(y2-y1,2))
		distancia = ( mat.raiz(auxiliar,2))

		escreva("A distância do entre os dois pontos é: ", distancia)
		
		escreva("\n----------------------------------------------\n")
		
		inteiro num1, unidade, dezena, centena, novo
		escreva("Digite um número inteiro: ")	
		leia(num1)
		unidade = (num1 % 10)
		dezena = ((num1 % 100)/10)
		centena = (num1 / 100)
		novo = (unidade * 100 + dezena * 10 + centena)
		escreva("O valor do número ", num1," ao contrário é: ", novo)
		
		real prestacao, acrescimo, desconto, prejuizo
		escreva("Entre com o valor da prestação: ")
		leia(prestacao)
		acrescimo = prestacao * 1.1
		desconto = acrescimo * 0.9
		prejuizo = prestacao- desconto
		prestacao = prestacao+acrescimo-prejuizo
		escreva("O valor a pagar é de R$ ", prestacao, " e o prejuizo foi" , prejuizo)
		

			
	}
}
