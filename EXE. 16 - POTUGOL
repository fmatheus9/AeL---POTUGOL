programa
{
	
	funcao inicio()
	{
		caracter mam, ave, rep, quad, bip, voa, aqua, car, herb, oni, frut,nv, trop, pola, nada, rapina, reptil, casco, rcar, patas
		escreva("É mamífero? (s ou n) ")
		leia(mam)
		escolha (mam)
		{
		caso 's':
		escreva("É quadrupede? ")
		leia(quad)
			escolha (quad){
				caso's':
				escreva("É carnívoro? ")
				leia(car)
				se (car == 's'){
					escreva("O animal escolhido foi o LEÃO")
					}
				senao{
					escreva("É herbívoro? ")
					leia(herb)
					se (herb == 's'){
						escreva("O animal escolhido foi o CAVALO")
						}
					senao{
						escreva("Animal não cadastrado no dados")
						}
					}
				pare
				
				caso 'n':
				escreva("É bípede? ")
				leia(bip)
					escolha (bip){
						caso 's':
						escreva("É onívoro? ")
						leia(oni)
						se (oni == 's'){
							escreva("O animal escolhido foi o HOMEM")
							}
						senao{
							escreva("É frutífero? ")
							leia(frut)
							se (frut == 's'){
								escreva("O animal escolhido foi o MACACO")
								}
							senao{
								escreva("Animal não cadastrado no dados")
								}
							}
						}
						}
				pare
				
		
		caso 'n':
		escreva("É uma ave? (s ou n) ")
		leia(ave)
			escolha (ave){
				caso 's':
				escreva("É uma ave não voadora? ")
				leia(nv)
				escolha (nv){
					caso 's':
					escreva("É uma ave tropical? ")
					leia(trop)
					se (nv == 's'){
						escreva("O animal escolhido foi o AVESTRUZ")
						}
					senao{
						escreva("É uma ave polar? ")
						leia(pola)
						se (pola == 's'){
							escreva("O animal escolhido foi o PINGUIM")
							}
						senao{
							escreva("Animal não cadastrado no dados")
							}
						
						}
					

					pare
				
					caso 'n':
					escreva("É uma ave nadadora? ")
					leia(nada)
					se (nada == 's'){
						escreva("O animal escolhido foi o PATO")
						}
					senao{
						escreva("É uma ave de rapina? ")
						leia(rapina)
						se (rapina == 's'){
							escreva("O animal escolhido foi a ÁGUIA")
							}
						senao{
							escreva("Animal não cadastrado no dados")
							}
						}
					}
					pare
					}
		escreva("É um réptil? (s ou n) ")
		leia(reptil)
		escolha (reptil){
			caso 's':
			escreva("Possui casco? ")
			leia(casco)
			se (casco == 's'){
				escreva("O animal escolhido foi a TARTARUGA")
				}
			senao{
				escreva("É um réptil carnívoro? ")
				leia(rcar)
				se (rcar == 's'){
					escreva("O animal escolhido foi o CROCODILO")
					}
				senao{
					escreva("É um réptil sem patas? ")
					leia(patas)
					se (patas == 's'){
						escreva("O animal escolhido foi a COBRA")
						}
					senao{
						escreva("Animal não cadastrado no dados")
						}
					}
				}
			pare 

			caso 'n':
			escreva("Animal não cadastrado no dados")
			pare
			}
			
				
		
		}
		
		 
		
	}
}
