programa
{
	
	funcao inicio()
	{
		inteiro i, total, t, b, r
		caracter x
		i=1
		t=0
		b=0
		r=0
		total=0
		escreva("Levantamento de Estoque:\nT-Vinho tinto.\nB-Vinho branco.\nR-Vinho rose.\nF-Finalizar programa.\n") 

		escreva("\n=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=\n")

		faca{
			escreva("\n->")
			leia(x)
			escolha(x){
				caso 'T':
				t++
				total++ 
				pare
				caso 'B':
				b++
				total++
				pare
				caso 'R':
				r++
				total++
				pare
				caso 'F':
				escreva("Programa Finalizado. ")
				pare
				caso contrario: escreva("Valor Inv√°lido")
								
			}
		}enquanto(x!='F')

		escreva("\n=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=\n")
		
		escreva("\nTotal de vinhos: ",total)
		escreva("\nTotal de vinhos tintos: ", t)
		escreva("\nTotal de vinhos brancos: ", b)
		escreva("\nTotal de vinhos roses: ",r)
	}
}

------------------------------------------------------------------------------------------------------------------------------------------------------------------

programa
{
	
	funcao inicio()
	{
		inteiro i, soma = 0
		para(i=0;i<500;i++){
			se(i%3==0 e i%2!=0){
				soma = soma+i
				escreva("\n",i," +")
			}
		}
		escreva("\n= ",soma)
	}
}

------------------------------------------------------------------------------------------------------------------------------------------------------------------

programa
{
	
	funcao inicio()
	{
		inteiro i, j, k
		para(i=1;i<=10;i++){
			escreva("\n5x",i," = ",5*i)
		}
	
	escreva("\n=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=\n")	
		
		j = 1
		enquanto(j<=10){
			escreva("\n5x",j," = ",5*j)
			j++
		}

	escreva("\n=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=\n")

		k=1
		faca{
			escreva("\n5x",k," = ",5*k)
			k++
		}enquanto(k<=10)
	}
}
